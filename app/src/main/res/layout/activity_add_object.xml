<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AddObjectActivity">


    <com.example.fgc2.ui.SetsControl
        android:id="@+id/add_chain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/chains_text" />

    <com.example.fgc2.ui.SetsControl
        android:id="@+id/add_chain_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/chain_name" />

    <com.example.fgc2.ui.SetsControl
        android:id="@+id/add_object_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/object__type" />

    <com.example.fgc2.ui.SetsControl
        android:id="@+id/add_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/number_text" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Добавить" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Удалить" />
</LinearLayout>